# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.WidgetController.index

# List Widgets
GET     /Listwidgets                    controllers.WidgetController.listWidgets

# Create Widget
GET    /Createwidget                    controllers.WidgetController.createWidget

# Add Widgest
POST   /Addwidget                    controllers.WidgetController.addWidget

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
